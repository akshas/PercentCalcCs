<UserControl x:Class="PercentCalcMvvm.Views.Percentage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PercentCalcMvvm.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
             
    <Grid Background="LightGray">
        <StackPanel Margin="0 80 0 0">
            <StackPanel Style="{DynamicResource InsideStack}">
                <TextBlock Text="Percent eintragen: "/>
                <TextBox  />
            </StackPanel>
            <StackPanel  Style="{DynamicResource InsideStack}">
                <TextBlock Text="Summe eintragen: " Foreground="#FF344D35"/>
                <TextBox  />
            </StackPanel>
            <TextBlock x:Name="DisplayPercentResult" Style="{DynamicResource ResultStyle}"/>
            <Button Content="Calculate"/>
        </StackPanel>
    </Grid>
</UserControl>
